<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="CoolQPack" AfterTargets="Build" BeforeTargets="PostBuildEvent">
    <MakeDir Directories="$(PublishDir)" Condition="!Exists('$(PublishDir)')" />

    <ItemGroup>
      <InputAssemblies Include="$(OutputPath)$(TargetFileName)" />
      <InputAssemblies Include="$(OutputPath)*.dll" Exclude="$(OutputPath)$(TargetFileName)" />
    </ItemGroup>

    <ILRepack
      Parallel="true"
      DebugInfo="false"
      XmlDocumentation="false"
      AllowDuplicateResources="false"
      InputAssemblies="@(InputAssemblies)"
      TargetKind="Dll"
      KeyFile="$(KeyFile)"
      OutputFile="$(PublishDir)$(TargetFileName)" />

    <UnmanagedExport File="$(PublishDir)$(TargetFileName)" />

    <Move SourceFiles="$(PublishDir)$(TargetFileName)" DestinationFiles="$(PublishDir)app.dll" />
    <Copy SourceFiles="$(ProjectDir)app.json" DestinationFolder="$(PublishDir)" />
  </Target>
</Project>