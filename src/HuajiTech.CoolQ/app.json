// 用于使用 HuajiTech.CoolQ 开发的酷Q应用配置文件。
// 版本 0.2.1-alpha.2
// *这是一个测试版本，不建议用于生产环境。
//
// 酷Q的 Json 文件支持以 // 开头的注释。
// 开发模式下，应用的 app.dll 及 app.json 文件须放在 dev/[appid]/ 目录下，且必须向 AppIdAttribute 传入正确的 AppId。
// 如 appid=com.example.demo, 则dll及json文件需分别放在 dev/com.example.demo/app.dll、dev/com.example.demo/app.json，
// 并在程序集上应用 [assembly: AppId("com.example.demo")]。
// [重要] appid 规则见 https://cqp.im/v9/appid
{
  "$schema": "https://raw.githubusercontent.com/cqmoe/awesome-coolq/master/schema/app/v9/app-schema.json",
  "ret": 1, // 返回码，固定为1
  "apiver": 9, // Api版本，本SDK为9
  "name": "HuajiTech.CoolQ 应用", // 应用名称
  "version": "1.0.0", // 应用版本
  "version_id": 1, // 应用顺序版本（每次发布时至少+1）
  "author": "HuajiTech", // 应用作者
  "description": "一个使用 HuajiTech.CoolQ 开发的酷Q应用。修改 app.json 以自定义应用信息。",
  "event": [ // 事件列表【发布前请删除无用事件】
    {
      "id": 1, // 事件ID
      "type": 21, // 事件类型
      "name": "私聊消息处理", // 事件名称
      "function": "OnPrivateMessageReceived", // 事件对应函数，大部分情况下【不要修改】。
      "priority": 30000 // 事件优先级(参见 https://cqp.im/deveventpriority )
    },
    {
      "id": 2,
      "type": 2,
      "name": "群消息处理",
      "function": "OnGroupMessageReceived",
      "priority": 30000
    },
    {
      "id": 3,
      "type": 11,
      "name": "群文件上传事件处理",
      "function": "OnFileUploaded",
      "priority": 30000
    },
    {
      "id": 4,
      "type": 101,
      "name": "群管理变动事件处理",
      "function": "OnAdministratorsChanged",
      "priority": 30000
    },
    {
      "id": 5,
      "type": 102,
      "name": "群成员减少事件处理",
      "function": "OnMemberLeft",
      "priority": 30000
    },
    {
      "id": 6,
      "type": 103,
      "name": "群成员增加事件处理",
      "function": "OnMemberJoined",
      "priority": 30000
    },
    {
      "id": 7,
      "type": 104,
      "name": "群禁言事件处理(非全员)",
      "function": "OnMemberMuteStateChanged",
      "priority": 30000
    },
    {
      "id": 8,
      "type": 104,
      "name": "群禁言事件处理(全员)",
      "function": "OnGroupMuteStateChanged",
      "priority": 30000
    },
    {
      "id": 9,
      "type": 201,
      "name": "好友已添加事件处理",
      "function": "OnFriendAdded",
      "priority": 30000
    },
    {
      "id": 10,
      "type": 301,
      "name": "好友添加请求处理",
      "function": "OnFriendshipRequested",
      "priority": 30000
    },
    {
      "id": 11,
      "type": 302,
      "name": "群添加请求处理(邀请)",
      "function": "OnEntranceInvited",
      "priority": 30000
    },
    {
      "id": 12,
      "type": 302,
      "name": "群添加请求处理(请求)",
      "function": "OnEntranceRequested",
      "priority": 30000
    },
    {
      "id": 1001,
      "type": 1001,
      "name": "酷Q启动事件",
      "priority": 30000,
      "function": "OnStarted"
    },
    {
      "id": 1002,
      "type": 1002,
      "name": "酷Q关闭事件",
      "priority": 30000,
      "function": "OnStopping"
    },
    {
      "id": 1003,
      "type": 1003,
      "name": "应用已被启用",
      "priority": 30000,
      "function": "OnAppEnabled"
    },
    {
      "id": 1004,
      "type": 1004,
      "name": "应用将被停用",
      "priority": 30000,
      "function": "OnAppDisabling"
    }
  ],
  "menu": [ // 设置菜单【发布前请删除无用菜单，如果无需设置菜单请全部删除】
    {
      "name": "菜单项", // 菜单名称
      "function": "OnMenuItemClicked" // 菜单对应函数
    }
  ],
  "status": [ // 悬浮窗状态【发布前请删除无用悬浮窗状态，如果无需悬浮窗状态请全部删除】
    {
      "id": 1, // 悬浮窗ID
      "name": "悬浮窗", // 名称
      "title": "FLOAT", // 英文名称
      "function": "OnStatusUpdating", // 数据更新对应函数
      "period": "1000" // 更新间隔（单位ms（毫秒），目前仅支持1000ms（1秒））
    }
  ],
  "auth": [ // 应用权限【发布前请删除无用权限】

    //20,  //[敏感]取Cookies    getCookies / getCsrfToken
    //30,  //接收语音           getRecord
    101, //发送群消息         sendGroupMsg
    106, //发送私聊消息       sendPrivateMsg

    //110, //[敏感]发送赞       sendLike
    120, //置群员移除         setGroupKick
    121, //置群员禁言         setGroupBan
    122, //置群管理员         setGroupAdmin
    123, //置全群禁言         setGroupWholeBan
    124, //置匿名群员禁言     setGroupAnonymousBan
    125, //置群匿名设置       setGroupAnonymous
    126, //置群成员名片       setGroupCard

    //127, //[敏感]置群退出     setGroupLeave
    128, //置群成员专属头衔   setGroupSpecialTitle
    130, //取群成员信息       getGroupMemberInfo
    131, //取陌生人信息       getStrangerInfo
    132, //取群信息           getGroupInfo
    140, //置讨论组退出       setDiscussLeave
    150, //置好友添加请求     setFriendAddRequest
    151, //置群添加请求       setGroupAddRequest
    160, //取群成员列表       getGroupMemberList
    161, //取群列表           getGroupList
    162, //取好友列表         getFriendList
    180 //撤回消息           deleteMsg
  ]
}